!!! 5
html
  head
    != css('style')
    != css('highlight')

    title Substance - Towards open digital publishing
  body(class="section-#{section}")
    - var color = '#2F2B27';
    - if (locals.network) color = network.color;
    #header(style="background: "+color)
      .header-inner
        .title: a(href="/") Substance
        - if (locals.network)
          .network
            a(href="/"+network.id)= network.name
        - if (locals.document)
          .document= document.title
    #content
      block content
    #footer
      .footer-inner
        div.outro Towards open digital publishing
        div.links
          a(href="/info") About
          span &nbsp;&middot;&nbsp;
          a(href="http://interior.substance.io",target="_blank") Interior
          span &nbsp;&middot;&nbsp;
          a(href="/blog") Blog
          span &nbsp;&middot;&nbsp;
          a(href="http://github.com/substance",target="_blank") Source Code
          span &nbsp;&middot;&nbsp;
          a(href="http://pledgie.com/campaigns/18902",target="_blank") Campaign
          span &nbsp;&middot;&nbsp;
          a(href="http://twitter.com/_substance",target="_blank") Twitter
    include ga.html