extends old-layout

block content
  if !user

    section
      h1 Login
      form(action="/login",method="post")
        label: input(name="username",placeholder="Email or username")
        label: input(name="password",type="password",placeholder="Password")
        button(type="submit") Go!

    section
      h1 Signup
      form(action="/signup",method="post")
        label: input(name="username",placeholder="Username")
        label: input(name="email",type="email",placeholder="Email")
        label: input(name="password",type="password",placeholder="Password")
        button(type="submit") Go!
